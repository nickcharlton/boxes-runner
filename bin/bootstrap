#!/usr/bin/ruby

begin
  require 'bundler/setup'
rescue LoadError
  puts 'You must `gem install bundler` and `bundle install` to run this.'
end

def die(message = nil)
  $stderr.puts "#{$PROGRAM_NAME} failed with code: #{$CHILD_STATUS.exitstatus}"
  $stderr.puts "#{message}" if message
  exit 1
end

system('git clone -b 2.0.0 git@github.com:nickcharlton/boxes.git boxes') ||
  die('Couldn\'t clone boxes repo at 2.0.0.')
